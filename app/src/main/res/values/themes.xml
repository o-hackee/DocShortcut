<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DocShortcut" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">?colorPrimary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorSecondaryVariant">?colorPrimary</item>
        <item name="colorOnSecondary">?colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">?colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DocShortcut.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.DocShortcut.AppWidgetContainer" parent="Theme.DocShortcut.AppWidgetContainerParent" />
</resources>